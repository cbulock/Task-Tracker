{% extends "Base.twig" %}

{% block title %}{{ task_name }}s{% endblock %}

{% block content %}
		<h2>Available {{ task_name }}s</h2>
		{% for task in tasks %}
			{% include 'components/task_button.twig' %}
		{% endfor %}

		{% if user.is_admin %}
			<a href='/admin' class='btn btn-link'>Admin Links</a>
		{% else %}
			<a href='/history' class='btn btn-link'>Your {{ task_name }} History</a>
		{% endif %}
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="/css/home.css">
{% endblock %}

{% block javascript %}
	<script src="/js/home.js"></script>
{% endblock %}
